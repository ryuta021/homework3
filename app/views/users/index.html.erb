<div class="body">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-4">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>user info</th>
                        </tr>
                    </thead>
                   <tbody>
                        <tr>
                            <th><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', size: '200×200', fallback: "no_image.jpg"%>
                            </th>
                        </tr>
                         <tr>
                            <th>name</th>
                            <th><%= @user.name %></th>
                         </tr>
                        <tr>
                            <th>introduction</th>
                            <th><%= @user.introduction %></th>
                         <tr>
                            <th><%= link_to "edit", edit_user_path(@user.id) ,class: "btn btn-default col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></th>
                        </tr>

                    </tbody>
                    </table>

                <div class="row">
                    <div class="col-xs-12">
                       <h2>New book</h2>
                   </div>
                        <% if @book.errors.any? %>
                            <%= @book.errors.count %>件のerrorが発生しました
                            <% @book.errors.full_messages.each do |message| %>
                                <%= message %>
                            <% end %>
                        <% end %>
                        <%= form_for(@book) do |f|%>
                              <div class="col-xs-12">titel</div>
                              <%= f.text_field :title ,class: "col-xs-12" %>
                             <div class="col-xs-12">body</div>
                              <%= f.text_area :body ,class: "col-xs-12" %>
                              <%= f.submit 'create Book'  ,class: "col-xs-12 btn btn-primary "%>
                        <% end %>
                </div>
            </div>



            <div class="col-lg-8">
                 <table class="table">
                    <thead>
                            <tr>
                                <th>Users</th>
                            </tr>
                        </thead>
                         <thead>
                            <tr>
                                <th>iamge</th>
                                <th>name</th>
                            </tr>
                        </thead>

                    <tbody>
                        <% @users.each do |user| %>
                            <tr>
                                <td><%= link_to user_path(user) do %>
                                  <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" ,size:"25x25" %>
                                  <% end %></td>
                                <td><%= user.name %></td>
                                <td><%= link_to "show", user_path(user.id) ,class: "label label-primary" %></td>
                             </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>







